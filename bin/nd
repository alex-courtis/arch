#!/bin/zsh

TEMPLATE="${XDG_CONFIG_HOME}/nvim/nd-template.lua"

ROOT="/tmp/nd"
CONFIG="${ROOT}/config/nvim"
LOCAL="${ROOT}/local/share/nvim"

INIT="${CONFIG}/nd.lua"

PACKPATH="${LOCAL}/site"

function edit() {
	cd "${CONFIG}"
	vi "${INIT}"
}

function clean() {
	# don't remove config to preserve an edit session in that directory
	rm -rf "${CONFIG}/*"
	rm -rf "${LOCAL}"
}

function init() {

	# pick source
	if [ -z "${1}" ]; then
		SRC="${HOME}/src/nvim-tree/master"
	elif [ -d "${1}" ]; then
		SRC="${1}"
	else
		SRC="${HOME}/src/nvim-tree/${1}"
	fi

	if [ ! -d "${SRC}" ]; then
		echo "${SRC} inexistent"
		exit 1
	fi

	# create
	clean
	mkdir -p "${CONFIG}" "${LOCAL}"
	cp "${TEMPLATE}" "${INIT}"

	# style
	cp "${SRC}/.editorconfig" "${CONFIG}"

	# luals from nvim-tree, add it as a library, to the "as" directory specified in packer config
	cp "${SRC}/.luarc.json" "${CONFIG}"
	sed -i -e "
		s#\"library\": \[#\"library\": \[ \"${LOCAL}/site/pack/packer/start/nvim-tree.lua.dev\",#
	" "${CONFIG}/.luarc.json"

	# nvim-tree plugin path
	sed -i -e "
		s#-- NVIM_TREE_DIR#{ \"${SRC}\", as = \"nvim-tree.lua.dev\", },#
	" "${INIT}"

	# scrape default config
	begin="default-config-start"
	end="default-config-end"
	inject="default-config-injection-placeholder"
	sed -n -e "/${begin}/,/${end}/{ /${begin}/d; /${end}/d; p; }" "${SRC}/lua/nvim-tree.lua" > /tmp/default-config.lua

	# inject then remove the placeholder
	sed -i -e "/${inject}/r /tmp/default-config.lua" -e "/${inject}/d" "${INIT}"

	# on_attach
	sed -i -e "
		s/on_attach = .*,/on_attach = M.on_attach,/g
	" "${INIT}"

	# enable logging
	sed -i -e "
		/log = {/{
			n
			s/enable = false/enable = true/
		}
		s/truncate = false/truncate = true/
		s/dev = false/dev = true/
	" "${INIT}"

	# enable diagnostics
	sed -i -e "
		/diagnostics = {/{
			n
			s/enable = false/enable = true/
		}
	" "${INIT}"

	# enable multi_instance
	sed -i -e "
		s/multi_instance = .*,/multi_instance = true,/
	" "${INIT}"
}

case "${1}" in
	"edit")
		edit
		;;
	"clean")
		clean
		;;
	"init")
		init "${2}"
		${NVIM-vi} -nu "${INIT}"
		;;
	*)
		${NVIM-vi} -nu "${INIT}" ${@}
		;;
esac

