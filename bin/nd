#!/bin/zsh

TEMPLATE="${XDG_CONFIG_HOME}/nvim/nd-template.lua"
ROOT="/tmp/nd"
INIT="${ROOT}/nd.lua"
PACKPATH="${ROOT}/site"

function edit() {
	cd "${ROOT}"
	vi "${INIT}"
}

function clean() {
	rm -rf "${ROOT}"
}

function init() {

	# pick source
	if [ -z "${1}" ]; then
		USR="master"
	else
		USR="${1}"
	fi
	SRC="${HOME}/src/nvim-tree/${USR}"

	if [ ! -d "${SRC}" ]; then
		echo "${SRC} inexistent"
		exit 1
	fi

	# create
	clean
	mkdir "${ROOT}"
	cp "${TEMPLATE}" "${INIT}"

	# style
	cp "${HOME}/.editorconfig" "${ROOT}"

	# nvim-tree plugin path
	sed -i -e "
		s#-- NVIM_TREE_DIR#\"${SRC}\",#
	" "${INIT}"

	# scrape options
	sed -n -e "
		/BEGIN_DEFAULT_OPTS/,/END_DEFAULT_OPTS/{
			/BEGIN_DEFAULT_OPTS/d
			/END_DEFAULT_OPTS/d
			p
		}
	" "${SRC}/lua/nvim-tree.lua" > "${ROOT}/DEFAULT_OPTS.lua"

	# insert options
	sed -i -e "
		/DEFAULT_OPTS/{
			r ${ROOT}/DEFAULT_OPTS.lua
			/DEFAULT_OPTS/d
		}
	" "${INIT}"

	# on_attach
	sed -i -e "
		s/on_attach = .*,/on_attach = M.on_attach,/g
	" "${INIT}"

	# enable logging
	sed -i -e "
		/log = {/{
			n
			s/enable = false/enable = true/
		}
		s/truncate = false/truncate = true/
		s/dev = false/dev = true/
	" "${INIT}"

	# enable diagnostics
	sed -i -e "
		/diagnostics = {/{
			n
			s/enable = false/enable = true/
		}
	" "${INIT}"

	# enable multi_instance
	sed -i -e "
		s/multi_instance = .*,/multi_instance = true,/
	" "${INIT}"

	# clean up
	rm ${ROOT}/DEFAULT_OPTS.lua
}

case "${1}" in
	"edit")
		edit
		;;
	"clean")
		clean
		;;
	"init")
		init "${2}"
		;;
	*)
		${NVIM-vi} -nu "${INIT}" ${@}
		;;
esac

