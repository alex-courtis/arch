#!/bin/sh

# 2025 05 25, 3.16.9
# working for talos principle 2 and returnal

# unnecessary
# --hdr-debug-force-output \
# export STEAM_MULTIPLE_XWAYLANDS=1
# export ENABLE_HDR_WSI=1

# unsure whether nested refresh is necessary

export MANGOHUD_CONFIGFILE=~/.config/MangoHud/MangoHud.conf

export DXVK_HDR=1

exec gamescope \
	--xwayland-count 2 \
	--nested-refresh 144 \
	--hdr-enabled \
	--adaptive-sync \
	--fullscreen \
	--mangoapp \
	--steam \
	-- steam -gamepadui -console \
	> "/tmp/gamescope-steam.${XDG_VTNR}.${USER}.log" 2>&1

