#!/bin/sh

case "${@}" in
	*clean*)
		export MAKEFLAGS="-j1"
		;;
	*)
		;;
esac

case "${PWD}" in
	*/nvim-tree/* | */nvim-web-devicons/*)
		export MAKEFLAGS="-j1"
		;;
esac

case "${PWD}" in
	*/wideriver/* | */way-displays/* | */xlayoutdisplay/*)
		/usr/bin/make CC="clang" CXX"=clang++" "${@}"
		;;
	*)
		/usr/bin/make "${@}"
		;;
esac

