Config { font = "xft:Monospace:bold:size=10, -misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , fgColor = "white"
       , bgColor = "gray20"
       , position = Top
       , commands = [ Run Date "%a %d %b %Y %H:%M:%S" "date" 10
                    , Run Cpu ["-t","C <total>%"
                               , "-L","10","-H","50"
                               , "--normal","green","--high","red"] 10
                    , Run Memory ["-t","M <usedratio>%"
                                  , "-L","40","-H","70"
                                  , "--normal","green","--high","red"] 10
                    , Run Swap ["-t","/<usedratio>%",
                                  "-L","10","-H","40",
                                  "--normal","green","--high","red"] 10
                    , Run DynNetwork ["-t","<dev> <rx>Kb/s <tx>Kb/s"
                                      , "-L","524288","-H","1572864"
                                      , "--normal", "green", "--high", "red"
                                      , "-S", "false"] 10
                    , Run Battery ["-t", "<acstatus>"
                                  , "-l", "red"
                                  , "--", "-f", "ACAD/online"
                                  -- battery only status
                                  , "-o"   , "   B <left>% (<timeleft>)"
                                  -- AC (dis)charging status
                                  , "-O"   , "   B <left>%"
                                  -- AC charged status
                                  , "-i"   , ""
                                  ] 50
                    , Run PipeReader "${XDG_RUNTIME_DIR}/xmobarPulseVolume" "volume"
                    , Run StdinReader
                    ]
       -- left button on network, cpu, memory, swap, battery invokes networkmanager_dmenu
       -- left button on volume invokes pavucontrol, then updates ${XDG_RUNTIME_DIR}/xmobarPulseVolume on exit
       , template = " %StdinReader% }{ <action=`networkmanager_dmenu >/dev/null 2>&1` button=1>%dynnetwork%   %cpu%   %memory%%swap%%battery%</action>   <action=`pavucontrol && xmobarPulseVolume.sh` button=1>%volume%</action>   %date% "
       }
