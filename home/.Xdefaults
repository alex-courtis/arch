URxvt*loginShell: true
URxvt*font: xft:monospace:size=10
URxvt*scrollBar: false
URxvt*saveLines: 10000
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt*secondaryScreen: true
URxvt*secondaryScroll: true
! provided by rxvt-unicode-better-wheel-scrolling
URxvt*secondaryWheel: true
! disable this mode as it has a ctrl-shift keybinding
URxvt*iso14755: false

! white text on black background
URxvt*background: #000000
URxvt*foreground: #ffffff

! tango colours otherwise; see https://gist.github.com/menski/2176539
! black dark/light
URxvt*color0:             #2e3436
URxvt*color8:             #6e706b
! red dark/light
URxvt*color1:             #cc0000
URxvt*color9:             #ef2929
! green dark/light
URxvt*color2:             #4e9a06
URxvt*color10:            #8ae234
! yellow dark/light
URxvt*color3:             #edd400
URxvt*color11:            #fce94f
! blue dark/light
URxvt*color4:             #3465a4
URxvt*color12:            #729fcf
! magenta dark/light
URxvt*color5:             #92659a
URxvt*color13:            #c19fbe
! cyan dark/light
URxvt*color6:             #07c7ca
URxvt*color14:            #63e9e9
! white dark/light
URxvt*color7:             #d3d7cf
URxvt*color15:            #eeeeec
